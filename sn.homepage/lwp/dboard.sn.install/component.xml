	type="source" 
	description="Homepage Product CD Files" 
	spec-version="1.0.0" 
    >

    <output-group name="default">
        <output type="jar" visibility="public" platform="all" location="${env.LWP_COMP_BUILD}/stage3/homepage_cd.jar" preferredInstallLocation="lib"/>
    </output-group>

    <output-group name="default">
        <output type="dir" visibility="public" platform="all" location="${env.LWP_COMP_BUILD}/db.scripts" preferredInstallLocation="lib"/>
    </output-group>
    
    <output-group name="to_lotus_live_installer">
