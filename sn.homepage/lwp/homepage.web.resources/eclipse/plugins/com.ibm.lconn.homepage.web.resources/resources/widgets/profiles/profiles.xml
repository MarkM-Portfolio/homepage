<iw:iwidget name="profiles" xmlns:iw="http://www.ibm.com/xmlns/prod/iWidget" 
	iScope="lconn.homepage.core.base.widgets.profiles.ProfilesHomepageClass" supportedModes="MyProfile MyColleagues" useHomepageEnhancedFeatures="true">
	<!-- <iw:resource uri="{homepage}/static/web/widgets/{version}/profiles/ProfilesHomepageClass.js"/> -->

	<iw:event id="edit" handled="true" onEvent="onEdit" /> 
	<iw:event id="onRefreshNeeded" handled="true" onEvent="onRefresh" />	
	<iw:event id="help" handled="true" onEvent="onHelp" />	
	<iw:event id="onUnload" handled="true" onEvent="onDestroy" />

	<iw:itemSet id="attributes">
		<iw:item id="numberColleaguesEntries" value="3" />
		<iw:item id="numberSearchResults" value="3" />
		<iw:item id="recent" value="3" />
	</iw:itemSet>

	<iw:itemSet id="defaultParams">    	
		<iw:item id="profileXsltUrl" value="profiles.xsl"/>
		<iw:item id="friendingXsltURL" value="friending.xsl"/>
		<iw:item id="profileServer" value="{profiles}"/>		
		<iw:item id="mappingRemoteUrl" value="{profiles}"/>
		<iw:item id="helpUrl" value="{help}/topic/com.ibm.lotus.connections.homepage.help/t_hp_using_profiles_widget.html"/>		
	</iw:itemSet>
	
	<iw:itemSet id="feeds">
		<iw:item id="myProfileFds" value="{profiles}/atom/profile.do?"/>
		<iw:item id="friendingFds" value="{profiles}/atom/connections.do?connectionType=colleague&amp;outputType=profile&amp;inclPendingCount=true&amp;"/>
		<iw:item id="commonActivitiesFds" value="{activities}/service/atom2/forms/everything?"/>
		<iw:item id="dogearFds" value="{dogear}/atom_fba"/>
		<iw:item id="blogFds" value="{blogs}/roller-ui/feed/"/>
		<iw:item id="searchFds" value="{profiles}/atom/search.do?"/>
		<iw:item id="pendingFriendURL" value="{profiles}/html/networkView.do?action=in&amp;requireAuth=true&amp;widgetId=friends"/>
		<iw:item id="recentActivitiesURL" value="{activities}/html/activity/recent?"/>
		<iw:item id="simpleSearchResultURL" value="{profiles}/html/simpleSearch.do?"/>
		<iw:item id="keywordSearchResultURL" value="{profiles}/html/keywordSearch.do?"/>
		<iw:item id="profilePicture" value="{profiles}/photo.do?"/>
	</iw:itemSet>

	<iw:itemSet id="services">
		<iw:item id="activities" value="{activities}"/>
		<iw:item id="blogs" value="{blogs}"/>
		<iw:item id="dogear" value="{dogear}"/>
	</iw:itemSet>
	
	<iw:itemSet id="modes">
		<iw:item id="MyProfile" value="{PROFILES_MY_PROFILE_TITLE}"/>
		<iw:item id="MyColleagues" value="{PROFILES_MY_COLLEAGUES_TITLE}"/>
	</iw:itemSet>
	
    <iw:content mode="view">
        <![CDATA[    
		<div id="_IWID_options_metadata" style="display: none"/>

		<hp:options xmlns:hp="http://www.ibm.com/homepage">
			<hp:option hp:id="recent" hp:type="select" hp:caption="{PROFILES_RECENT_CAPTION}">
			<hp:choice hp:id="1" hp:value="{PROFILES_LAST_DAY}"></hp:choice>
			<hp:choice hp:id="2" hp:value="{PROFILES_LAST_3_DAYS}"></hp:choice>
			<hp:choice hp:id="3" hp:value="{PROFILES_LAST_WEEK}"></hp:choice>
			<hp:choice hp:id="4" hp:value="{PROFILES_LAST_2_WEEKS}"></hp:choice>
			<hp:choice hp:id="5" hp:value="{PROFILES_LAST_MONTH}"></hp:choice>
		</hp:option>

		<hp:option hp:id="numberColleaguesEntries" hp:type="select" hp:caption="{PROFILES_AMOUNT_ENTRIES}">
			<hp:choice hp:id="1" hp:value="1"></hp:choice>
			<hp:choice hp:id="2" hp:value="2"></hp:choice>
			<hp:choice hp:id="3" hp:value="3"></hp:choice>
			<hp:choice hp:id="4" hp:value="4"></hp:choice>
			<hp:choice hp:id="5" hp:value="5"></hp:choice>
			<hp:choice hp:id="6" hp:value="6"></hp:choice>
			<hp:choice hp:id="7" hp:value="7"></hp:choice>
			<hp:choice hp:id="8" hp:value="8"></hp:choice>
			<hp:choice hp:id="9" hp:value="9"></hp:choice>
			<hp:choice hp:id="10" hp:value="10"></hp:choice>
		</hp:option>


		</hp:options>

		</div>
   		<div id="_IWID_root"/>
		]]> 
     </iw:content>
</iw:iwidget>
