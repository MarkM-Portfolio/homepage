<iw:iwidget name="communities" xmlns:iw="http://www.ibm.com/xmlns/prod/iWidget" iScope="lconn.homepage.core.base.widgets.communities.CommunitiesHomepageClass" supportedModes="PublicCommunity" useHomepageEnhancedFeatures="true">

	<!-- <iw:resource uri="{homepage}/static/web/widgets/{version}/communities/CommunitiesHomepageClass.js"/> -->

	<iw:event id="edit" handled="true" onEvent="onEdit" /> 
	<iw:event id="onRefreshNeeded" handled="true" onEvent="onRefresh" />		
	<iw:event id="help" handled="true" onEvent="onHelp" />
	<iw:event id="onUnload" handled="true" onEvent="onDestroy" />

	<iw:itemSet id="attributes">
		<iw:item id="communitiesNumberEntries" value="3" />
	</iw:itemSet>

	<iw:itemSet id="defaultParams">
		<iw:item id="xsltUrl" value="../communities.xsl"/>
		<iw:item id="mappingRemoteUrl" value="{communities}/service/html/allcommunities"/>
		<iw:item id="helpUrl" value="{help}/topic/com.ibm.lotus.connections.homepage.help/t_hp_using_public_communities_widget.html"/>
  	</iw:itemSet>

	<iw:itemSet id="feeds">
		<iw:item id="defaultURL" value="{communities}/service/atom/forms/communities/all?sortField=lastmod"/>
		<iw:item id="publicURL" value="{communities}/service/atom/forms/communities/all?sortField=lastmod"/>
		<iw:item id="publicCountURL" value="{communities}/service/atom/forms/catalog/public?results=1&amp;start=0&amp;sortKey=update_date&amp;sortOrder=desc&amp;format=XML"/>
	</iw:itemSet>

	<iw:itemSet id="modes">
		<iw:item id="MyCommunity" value="{COMMUNITIES_MY_TITLE}"/>
		<iw:item id="PublicCommunity" value="{COMMUNITIES_PUBLIC_TITLE}"/>
	</iw:itemSet>	

    <iw:content mode="view">
        <![CDATA[    
		<div id="_IWID_options_metadata" style="display: none"/>

		<hp:options xmlns:hp="http://www.ibm.com/homepage">
			<hp:option hp:id="communitiesNumberEntries" hp:type="select" hp:caption="{COMMUNITIES_AMOUNT_ENTRIES}">
				<hp:choice hp:id="1" hp:value="1"></hp:choice>
				<hp:choice hp:id="2" hp:value="2"></hp:choice>
				<hp:choice hp:id="3" hp:value="3"></hp:choice>
				<hp:choice hp:id="4" hp:value="4"></hp:choice>
				<hp:choice hp:id="5" hp:value="5"></hp:choice>
				<hp:choice hp:id="6" hp:value="6"></hp:choice>
				<hp:choice hp:id="7" hp:value="7"></hp:choice>
				<hp:choice hp:id="8" hp:value="8"></hp:choice>
				<hp:choice hp:id="9" hp:value="9"></hp:choice>
				<hp:choice hp:id="10" hp:value="10"></hp:choice>
			</hp:option>


		</hp:options>

		</div>


   		<div id="_IWID_root"/>
		]]> 
     </iw:content>
</iw:iwidget>
