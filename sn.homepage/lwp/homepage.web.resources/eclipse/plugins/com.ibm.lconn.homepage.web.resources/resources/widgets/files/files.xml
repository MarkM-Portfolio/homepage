<iw:iwidget name="myfiles" xmlns:iw="http://www.ibm.com/xmlns/prod/iWidget" iScope="lconn.homepage.core.base.widgets.files.FilesHomepageClass" useHomepageEnhancedFeatures="true">
	<!-- <iw:resource uri="{homepage}/static/web/widgets/{version}/files/FilesHomepageClass.js"/> -->

	<iw:event id="edit" handled="true" onEvent="onEdit" /> 	
	<iw:event id="help" handled="true" onEvent="onHelp" />
	<iw:event id="onRefreshNeeded" handled="true" onEvent="onRefresh" />
	<iw:event id="onUnload" handled="true" onEvent="onDestroy" />

	<iw:itemSet id="attributes">
		<iw:item id="numberRecentFilesEntries" value="3" />
	</iw:itemSet>

	<iw:itemSet id="defaultParams">    	
		<iw:item id="xsltUrl" value="files.xsl"/>
		<iw:item id="mappingRemoteUrl" value="{files}/app/"/>
		<iw:item id="uploadURL" value="{files}/app/person" />
		<iw:item id="helpUrl" value="{help}/topic/com.ibm.lotus.connections.homepage.help/t_hp_using_my_files_widget.html"/>
  	</iw:itemSet>

	<iw:itemSet id="feeds">
		<iw:item id="defaultURL" value="{files}"/>
		<iw:item id="imageURL" value="{files}/service/fileicon/32/"/>
		<iw:item id="myFilesURL" value="{files}/form/api/myuserlibrary/feed"/>		
	</iw:itemSet>
	
	<iw:itemSet id="modes">
		<iw:item id="currentMode" value="MyFiles"/>
	</iw:itemSet>
	
    <iw:content mode="view">
        <![CDATA[ 

		<div id="_IWID_options_metadata" style="display: none"/>

		<hp:options xmlns:hp="http://www.ibm.com/homepage">
			<hp:option hp:id="numberRecentFilesEntries" hp:type="select" hp:caption="{FILES_AMOUNT_ENTRIES}">
			<hp:choice hp:id="1" hp:value="1"></hp:choice>
			<hp:choice hp:id="2" hp:value="2"></hp:choice>
			<hp:choice hp:id="3" hp:value="3"></hp:choice>
			<hp:choice hp:id="4" hp:value="4"></hp:choice>
			<hp:choice hp:id="5" hp:value="5"></hp:choice>
			<hp:choice hp:id="6" hp:value="6"></hp:choice>
			<hp:choice hp:id="7" hp:value="7"></hp:choice>
			<hp:choice hp:id="8" hp:value="8"></hp:choice>
			<hp:choice hp:id="9" hp:value="9"></hp:choice>
			<hp:choice hp:id="10" hp:value="10"></hp:choice>
		</hp:option>

	
		</hp:options>

		</div>
   
   		<div id="_IWID_root"/>
		]]> 
     </iw:content>
</iw:iwidget>
