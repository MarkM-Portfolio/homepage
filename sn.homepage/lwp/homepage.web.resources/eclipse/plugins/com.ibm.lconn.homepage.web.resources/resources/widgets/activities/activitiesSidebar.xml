<iw:iwidget name="activities" xmlns:iw="http://www.ibm.com/xmlns/prod/iWidget" iScope="base.iWidget.activitiesSideBar.ActivitiesHomepageClass" supportedModes="Normal" useHomepageEnhancedFeatures="true">
	<!-- <iw:resource uri="{homepage}/static/web/widgets/{version}/activitiesSideBar/ActivitiesHomepageClass.js"/> -->

	<iw:event id="onRefreshNeeded" handled="true" onEvent="onRefresh" />	
	<iw:event id="help" handled="true" onEvent="onHelp" />
	<iw:event id="onUnload" handled="true" onEvent="onDestroy" />
  	
	<iw:itemSet id="attributes">
		<iw:item id="publicNumberEntries" value="3" />
		<iw:item id="recent" value="3" />
  	</iw:itemSet>

	<iw:itemSet id="defaultParams">
		<iw:item id="xsltUrl" value="activities.xsl"/>		
		<iw:item id="mappingRemoteUrl" value="{activities}"/>	
		<iw:item id="helpUrl" value="{help}/topic/com.ibm.lotus.connections.homepage.help/activities_frame.html"/>
	</iw:itemSet>

	<iw:itemSet id="feeds">
		<iw:item id="defaultURL" value="{activities}/service/atom2/everything"/>
		<iw:item id="activities" value="{activities}/service/atom2/activities"/>
		<iw:item id="responses" value="{activities}/service/atom2/everything?repliesToUserid="/>
		<iw:item id="todos" value="{activities}/service/atom2/todos"/>		
	</iw:itemSet>

	<iw:content mode="view">
		 <![CDATA[
   		<div id="_IWID_root"/>
		]]> 
	</iw:content>
</iw:iwidget>
