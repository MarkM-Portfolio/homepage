<iw:iwidget name="activities" xmlns:iw="http://www.ibm.com/xmlns/prod/iWidget"
	iScope="lconn.homepage.core.base.widgets.activitiesTodoList.ActivitiesTodoListHomepageClass"
	supportedModes="Normal" useHomepageEnhancedFeatures="true">

	<iw:event id="onRefreshNeeded" handled="true" onEvent="onRefresh" />	
	<iw:event id="help" handled="true" onEvent="onHelp" />
	<iw:event id="onUnload" handled="true" onEvent="onDestroy" />
	
	<iw:itemSet id="modes">
		<iw:item id="currentMode" value="Normal"/>
	</iw:itemSet>
	

	<iw:itemSet id="defaultParams">
		<iw:item id="todoUrl" value="{activities}/service/html/mainpage#todolist"/>
		<iw:item id="helpUrl" value="{help}/topic/com.ibm.lotus.connections.homepage.help/t_using_my_to_do_list_widget.html"/>
	</iw:itemSet>

	<iw:itemSet id="feeds">
		<iw:item id="defaultURL" value="{activities}/service/atom2/todos?sortfields=duedate%2Clastmod&amp;sortorder=0%2C1&amp;count=10"/>
	</iw:itemSet>

	<iw:content mode="view">
		 <![CDATA[
   		<div id="_IWID_root"/>
		]]> 
	</iw:content>
</iw:iwidget>
