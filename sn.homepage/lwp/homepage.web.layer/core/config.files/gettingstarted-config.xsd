<!-- 5724-S68                                                          -->
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">

	<xs:element name='config'>
		<xs:complexType>
			<xs:choice>
				<xs:element ref='url' minOccurs='1' maxOccurs='1'/>
				<xs:element ref='steps' minOccurs="1" maxOccurs="1"/>				
			</xs:choice>
			<xs:attribute name='id' use='required' type='xs:NMTOKEN' />
			<xs:attribute name='buildlevel' type="xs:string" use='required'/>
			<xs:attribute name='version' use='required' type='xs:NMTOKEN' />
			<xs:attribute name="enabled" type="xs:boolean" use="required"/>
		</xs:complexType>
	</xs:element>

	<xs:element name="url">
		<xs:complexType>
			<xs:simpleContent>
				<xs:extension base="xs:string">
					<xs:attribute name="target" type="xs:string"></xs:attribute>
				</xs:extension>
			</xs:simpleContent>
		</xs:complexType>
	</xs:element>

	<xs:element name="steps">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref='step' minOccurs='1' maxOccurs="unbounded"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<xs:element name="step">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="title" maxOccurs="1" minOccurs="1" />
				<xs:element ref="body-links" maxOccurs="1" minOccurs="1" />
			</xs:sequence>
			<xs:attribute name="enabled" type="xs:boolean" use="required"/>
		</xs:complexType>
	</xs:element>


	<xs:simpleType name="title_string">
		<xs:restriction base="xs:token">
			<xs:minLength value="1"/>
		</xs:restriction>
	</xs:simpleType>
	

	<xs:element name="title">
		<xs:complexType>
    			<xs:simpleContent>
      				<xs:extension base="title_string">
       					<xs:attribute name="bundle" type="xs:string" use="optional"/>
      				</xs:extension>
    			</xs:simpleContent>
		</xs:complexType>
	</xs:element>


	<xs:element name="body-links">
		<xs:complexType>
			<xs:attribute name="secure" type="xs:string" use="required"/>
			<xs:attribute name="unsecure" type="xs:string" use="required"/>
		</xs:complexType>
	</xs:element> 

</xs:schema>
