<beans xmlns="http://www.springframework.org/schema/beans"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
    
    <!-- In order to have the right bean initialization this must to be at the START -->
    <import resource="classpath:spring/home-news/database/DatabaseDao.xml"/>
    
    <bean name="LifeCycle:userLifeCycleSpiImpl" class="com.ibm.lconn.homepage.services.userlifecycle.impl.UserLifeCycleHandlerSpiImpl">
        <property name="personDao" ref="HPNEWS-DATABASE:personDao"/>
        <property name="loginDao" ref="HPNEWS-DATABASE:loginNameDao"/>
        <property name="personBeanConvertor" ref="LifeCycle:personConvertor"/>
        <property name="numPersonsToProcess" value="100"/>
    </bean>
    
    <bean name="LifeCycle:personConvertor" class="com.ibm.lconn.homepage.services.userlifecycle.impl.PersonBeanConvertor">
    </bean>
    
</beans>
