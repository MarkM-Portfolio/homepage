<beans xmlns="http://www.springframework.org/schema/beans"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xmlns:util="http://www.springframework.org/schema/util"
 xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
    
     <bean id="mockAvailableWidgetList" class="org.springframework.beans.factory.config.ListFactoryBean">
        <property name="sourceList">
            <list>
                <bean class="com.ibm.lconn.core.services.cre.remote.widget.model.Widget">
                    <property name="widgetId" value="widget1"/>
                    <property name="title" value="aa"/>
                </bean>
                <bean class="com.ibm.lconn.core.services.cre.remote.widget.model.Widget">
                    <property name="widgetId" value="widget2"/>
                    <property name="title" value="bb"/>
                </bean>
            </list>
        </property>
    </bean>
    
    <bean id="mockAvailableWidgetTree" class="org.springframework.beans.factory.config.MapFactoryBean">
        <property name="sourceMap">
            <map>
                <entry key="cat1">
                    <bean class="com.ibm.lconn.core.services.cre.remote.widget.model.WidgetCategory">
                        <property name="id" value="ACTIVITIES"/>
                    </bean>
                </entry>
                <entry key="cat2">
                    <bean class="com.ibm.lconn.core.services.cre.remote.widget.model.WidgetCategory">
                        <property name="id" value="OTHER"/>
                    </bean>
                </entry>
            </map>
        </property>
    </bean> 
    
    <bean id="mockUserInfo" class="com.ibm.lconn.homepage.test.web.mock.GenericMockFactory">
        <property name="interfaceName" value="com.ibm.lconn.homepage.services.IUserServices"/>
    </bean>
    
    <bean id="mockResourceBundle" class="com.ibm.lconn.homepage.test.web.mock.GenericMockFactory">
        <property name="interfaceName" value="com.ibm.lconn.homepage.utils.ResourceBundle"/>
    </bean>
    
    <bean id="mockTabInfoService" class="com.ibm.lconn.homepage.test.web.mock.GenericMockFactory">
        <property name="interfaceName" value="com.ibm.lconn.homepage.services.ITabServices"/>
    </bean>
