<!-- Package regrouping the actions related to the river of news -->
<struts>
    <package name="riverOfNews" extends="homepage-default">
       		
		<action name="doFetchNewsStories" class="com.ibm.lconn.homepage.web.action.news.HomepageFetchNewsAction">
			<result name="success" type="dispatcher">/web/jsp/river/storiesTemplaterControler.jspf</result>
		</action>
		
		<action name="doFetchSubscriptions" class="com.ibm.lconn.homepage.web.action.news.HomepageFetchSubscriptionsAction">
			<result name="success" type="dispatcher">/web/jsp/river/subscriptionJson.jsp</result>
		</action>
		
		<action name="doManageNewsPersistence" class="com.ibm.lconn.homepage.web.action.news.HomepageSaveNewsAction">
		</action>
		
		<action name="doSubscribeWatchlist" class="com.ibm.lconn.homepage.web.action.news.HomepageSubscribeWatchlistAction">
		</action>
		
		<action name="doUnsubscribeWatchlist" class="com.ibm.lconn.homepage.web.action.news.HomepageUnsubscribeWatchlistAction">
		</action>
	</package>
</struts>
