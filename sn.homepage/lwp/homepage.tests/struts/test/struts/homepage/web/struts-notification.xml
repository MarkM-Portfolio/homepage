	<!-- Package regrouping the actions related to notification tab -->
<struts>
	<package name="notification" extends="homepage-default">

		<action name="getNotificationSent"
			class="com.ibm.lconn.homepage.web.action.notifications.NotificationSentAction">
			<result name="success" type="dispatcher">
				/web/jsp/notifications/notificationsSent.jspf
            </result>
		</action>

		<action name="getNotificationReceived"
			class="com.ibm.lconn.homepage.web.action.notifications.NotificationReceivedAction">
			<result name="success" type="dispatcher">
				/web/jsp/notifications/notificationsReceived.jspf
            </result>
		</action>

		<action name="getNotificationTabs" class="com.ibm.lconn.homepage.web.action.notifications.NotificationTabAction">
			<result name="success" type="dispatcher">
				/web/jsp/notifications/notificationsTab.jspf
            </result>
		</action>
	</package>
</struts>

