<!-- Package regrouping the actions related to Admin tab -->
<struts>
	<package name="admin" extends="homepage-default" namespace="/admin">
	   <action name="newWidget" class="com.ibm.lconn.homepage.web.action.admin.NewWidgetAction">
			<result name="success" type="tiles">
               homepage.admin.adminPage
            </result>
        </action>
        
       	<action name="removeWidgets" class="com.ibm.lconn.homepage.web.action.admin.RemoveWidgetsAction">
			<result name="success" type="tiles">
               homepage.admin.adminPage
            </result>
        </action>
        
        <action name="enableWidgets" class="com.ibm.lconn.homepage.web.action.admin.EnableWidgetsAction">
			<result name="success" type="tiles">
               homepage.admin.adminPage
            </result>
        </action>
        
        <action name="enableTestMode" class="com.ibm.lconn.homepage.web.action.admin.EnableTestModeAction">
			<result name="success" type="tiles">
               homepage.admin.adminPage
            </result>
        </action>
        
        <action name="editWidget" class="com.ibm.lconn.homepage.web.action.admin.EditWidgetAction">
			<result name="success" type="tiles">
              homepage.admin.adminPage
            </result>
        </action>
        
        <action name="disableWidgets" class="com.ibm.lconn.homepage.web.action.admin.DisableWidgetsAction">
			<result name="success" type="tiles">
              homepage.admin.adminPage
            </result>
        </action>
        
        
        <action name="openEditForm" class="com.ibm.lconn.homepage.web.action.admin.OpenEditFromAction">
			<result name="success" type="tiles">
              homepage.admin.editForm
            </result>
        </action>
        
        <action name="newOpenEditForm" class="com.ibm.lconn.homepage.web.action.admin.OpenEditFromAction" method = "newOpenEditForm">
			<result name="success" type="tiles">
              homepage.admin.editForm
            </result>
        </action>
        
        <action name="refreshCash" class="com.ibm.lconn.homepage.web.action.admin.AbstractWidgetAdminAction" method = "refreshDescriptorCache">
			<result name="success" type="tiles">
              homepage.admin.adminPage
            </result>
        </action>
       
        <action name="openAdminPage" class="com.ibm.lconn.homepage.web.action.admin.OpenAdminPageAction">
			<result name="success" type="tiles">
              homepage.admin.adminPage
            </result>
        </action>
        
        <action name="clearWidgetCache" class="com.ibm.lconn.homepage.web.action.admin.ClearWidgetCacheAction">
			<result name="success" type="tiles">
              homepage.admin.adminPage
            </result>
        </action>
	
	</package>
	
</struts>
