  <test name="Globalsearch" preserve-order="true" enabled="false">
    <parameter name="start_url" value="search/login" />
    <packages>
      <package name="com.ibm.atmn.lc.testcases.globalsearch" />
    </packages>
  </test>
  <test name="Homepage" preserve-order="true" enabled="true">
    <parameter name="start_url" value="homepage/login" />
    <packages>
      <package name="com.ibm.atmn.lc.testcases.homepage" />
    </packages>
  </test>
  <test name="MediaGallery" preserve-order="true" enabled="false">
