  </test>
  <test name="Wikis" preserve-order="true" enabled="false">
    <parameter name="start_url" value="wikis/home" />
    <packages>
      <package name="com.ibm.atmn.lc.testcases.wikis" />
    </packages>
  </test>
</suite>
