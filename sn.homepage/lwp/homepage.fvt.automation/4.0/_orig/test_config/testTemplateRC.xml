<!-- SEE TESTNG.ORG for documentation on using these xml config files. DTD available at above link and also in testng .jar-->

<suite thread-count="1" name="LCBVT_Suite_Full" parallel="false">

  <parameter name="server_host" value="localhost" />
  <parameter name="server_port" value="4445" />
  <parameter name="browser_url" value="http://lc30linux3.swg.usma.ibm.com/" />
  <parameter name="server_is_grid_hub" value="false" />
   
  <!--
  The appropriate browser start commmand is formed from the 3 parameters below. All parameters are required.
  For Selenium Grid, browser start command will be '[browser_name]_[browser_version]_[browser_environment_os]'.
  If using selenium grid(i.e. '<parameter name="server_is_grid_hub" value="true" />'), you must request capabilities that match what is available on the grid.
  If not using selenium grid(i.e. '<parameter name="server_is_grid_hub" value="false" />'), the appropriate browser_start_command will be automatically chosen (e.g. *firefox for browser_name="FireFox").
  View grid capabilities at 'http://[server_host]:[server_port]/grid/'.
  -->
  <!-- <parameter name="browser_name" value="Firefox" /> Valid values are: 'Firefox' OR 'GoogleChrome' OR 'InternetExplorer'. This is CaseSensitive -->
  <!-- <parameter name="browser_version" value="3.6" /> Example values are:'3.6', '5', '8', '10'-->
  <!-- <parameter name="browser_environment_os" value="WindowsVista" /> Example values are: Windows7, WindowsVista, WindowsXP, MacOSX, LinuxMint etc. This is CaseSensitive -->

  <!-- Provide list of grid style browser capabilities separated by ';'. If "server_is_grid_hub" value="false" start command will be automatically adjsuted for standalone server. -->
  <parameter name="browser_start_command" value="InternetExplorer_9_Windows7" />

  <!-- Listeners to be passed to testng -->
  <listeners>
    <listener class-name="com.ibm.atmn.base.ListenerForErrors" />
  </listeners>
  
  <!--
  Specify test structure below. Parameters for tests may be expected. <Test> parameters automatically override suite parameters of the same same.
  <Test> divisions are abritrary. @Test method locations for a <test> may be specified by <package> or <class>.
  -->
  <test name="Activities" preserve-order="true" enabled="false">
    <parameter name="start_url" value="activities/auth/login.jsp" />
    <packages>
      <package name="com.ibm.atmn.lc.testcases.activities" />
    </packages>
  </test>
  <test name="Blogs" preserve-order="true" enabled="false">
    <parameter name="start_url" value="blogs/roller-ui/homepage" />
