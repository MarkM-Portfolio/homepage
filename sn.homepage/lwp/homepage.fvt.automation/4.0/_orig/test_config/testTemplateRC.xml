  </test>
  <test name="Metrics" preserve-order="true" enabled="false">
    <parameter name="start_url" value="" />
    <packages>
      <package name="com.ibm.atmn.lc.testcases.metrics" />
    </packages>
  </test>
  <test name="Mobile" preserve-order="true" enabled="false">
    <parameter name="start_url" value="mobile/admin/Login" />
    <packages>
      <package name="com.ibm.atmn.lc.testcases.mobile" />
    </packages>
  </test>
  <test name="Moderation" preserve-order="true" enabled="false">
    <parameter name="start_url" value="" />
