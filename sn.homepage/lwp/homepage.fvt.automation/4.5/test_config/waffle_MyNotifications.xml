<!-- SEE TESTNG.ORG for documentation on using testng xml config files. DTD available at above link and also in testng.jar -->

<suite thread-count="1" name="Waffle_Johann" parallel="false" >

  <!--
  GROUPS
  Specifying groups will cause only the tests of that group (that are found in the test classes specified under <test>s below) to be run. 
  Groups may also me specified under <test>.
  -->
  <!-- <groups>
    <run>
      <include name="level2" />
    </run>
  </groups> -->
 
  <!-- 
  SELENIUM GRID/REMOTE SERVER SETTINGS
  To run locally:  
  '<parameter name="server_is_grid_hub" value="false" />'
  '<parameter name="server_host" value="localhost" />'
  '<parameter name="server_port" value="" />'
  Remote server:
  '<parameter name="server_is_grid_hub" value="false" />'
  '<parameter name="server_host" value="[address of hub host]" />' e.g.hub.lab.ibm.com
  '<parameter name="server_port" value="[port number used when starting server]" />'
   -->
  <parameter name="server_is_grid_hub" value="false" />
  <parameter name="server_host" value="localhost" />
  <parameter name="server_port" value="" />
  
  <!-- APPLICATION UNDER TEST HOST SERVER -->
  <parameter name="browser_url" value="https://dubxpcvm040.mul.ie.ibm.com:9444/" /><!-- address of application host -->

  <!-- BROWSER START COMMAND
  The appropriate browser start commmand is formed from the browser_start_command string in format [browser_name]_[browser_version]_[browser_environment_os]. 
  All 3 parts are required.
  If using selenium grid(i.e. '<parameter name="server_is_grid_hub" value="true" />'), browser start command will be used to set capabilities. 
  You must request capabilities that match what is available on the grid. View grid capabilities at 'http://[server_host]:[server_port]/grid/'.
  If using -IBMtemplate argument with executable jar, desired browsers must be delimited by a semi-colon (e.g. 'GoogleChrome_9_Windows;Firefox_8_Windows').
  -->
  <parameter name="browser_start_command" value="ff_13_Windows" />
  
  <!--
  WAFFLE CONFIGURATION PARAMETERS
  Will be used in configuration of waffle. May also contain parameters used in configuration of test tool
  -->
  <parameter name="implicit_wait" value="20000" />
  <parameter name="timeout_async_script" value="30000" />
  <parameter name="timeout_page_navigate_timeout" value="60000" />
  <parameter name="pch_enable_dojo_pageload" value="true" />
  <parameter name="pch_enable_standard_pageload" value="true" />
  <parameter name="pch_post_event_pause" value="1000" />
  <parameter name="location_force_script" value="false" />
  <parameter name="location_use_fallback_strategy" value="true" />
  <!-- 
  CUSTOM PARAMETERS
  'Root' folder must be in drive root (e.g. 'C:\[root_folder_name]' expected absolute path if windows). 
  Intended to be used for accessing files placed in advance, whether browser is on a local or remote machine. 
  -->
  <!-- If you are a developer running a PREBVT keep this parameter as PREBVT -->
  <parameter name="bvt_option" value="BVT" />  
  <!-- What field from ldap CSV to use as login username (case sensitive) e.g. 'uid' OR 'Display name' OR 'email' -->
  <parameter name="users_login_preference" value="email" />
  <parameter name="users_typeahead_preference" value="email" />
  <!-- 'Root' folder must be in drive root (e.g. 'C:\[root_folder_name]' expected absolute path if windows). 
  Intended to be used for accessing files placed in advance, whether browser is on a remote machine. -->
  <parameter name="root_folder_name" value="SeleniumServer" />
  <parameter name="upload_files_folder_name" value="TestFiles" /><!-- An immediate child directory of 'root_folder' -->

  <!-- LISTENERS -->
  <listeners>
    <!--<listener class-name="com.ibm.atmn.waffle.base.BaseExecutionListener" />
    <listener class-name="com.ibm.atmn.waffle.base.BaseTestListener" />-->
    <listener class-name="org.uncommons.reportng.HTMLReporter"/>
  </listeners>
  
  <!-- 
  TESTS
  Specify test structure below. A test is a collection of test classes. 
  Parameters for tests may be expected. <Test> parameters automatically override suite parameters of the same same.
  <Test> divisions are abritrary. @Test method locations for a <test> may be specified by <package> or <class>.
  -->
  <test name="Activities" preserve-order="true" enabled="false">
    <classes>
     <class name="com.ibm.atmn.wd_homepagefvt.testcases.activities.mynotifications.FVT_My_Notifications_Activities" />
      <!--<class name="com.ibm.atmn.wd_homepagefvt.testcases.activities.TestOfFVT_Level2_Activities" />-->
    </classes>
  </test>
  <test name="Blogs" preserve-order="true" enabled="false">
    <classes>
       <class name="com.ibm.atmn.wd_homepagefvt.testcases.blogs.mynotifications.FVT_My_Notifications_Blogs" />
      <class name="com.ibm.atmn.wd_homepagefvt.testcases.blogs.TestOfFVT_Level2_Blogs" /> 
    </classes>
  </test>
   <test name="Communities" preserve-order="true" enabled="true">
    <groups>
        <run>
         	<exclude name="broken"/>
        </run>
    </groups>
     <classes>
              <class name="com.ibm.atmn.wd_homepagefvt.testcases.communities.mynotifications.FVT_MyNot_Communities" />
    </classes>
  </test>
   <test name="Dogear" preserve-order="true" enabled="false">
     <classes>
           <class name="com.ibm.atmn.wd_homepagefvt.testcases.dogear.mynotifications.FVT_MyNotifications_Dogear" />
    </classes>
  </test>
   <test name="Forums" preserve-order="true" enabled="false">
     <classes>
    </classes>
  </test>
  <test name="Profiles" preserve-order="true" enabled="false">
    <classes>
          <class name="com.ibm.atmn.wd_homepagefvt.testcases.profiles.mynotifications.FVT_My_Notifications_Profiles" />
    </classes>
  </test>
  <test name="Wikis" preserve-order="true" enabled="false">
    <classes>
       <class name="com.ibm.atmn.wd_homepagefvt.testcases.wikis.mynotifications.FVT_My_Notifications_Wikis" />
    </classes>
  </test>
</suite>
